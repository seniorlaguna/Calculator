<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/defaultColorPrimary</item>
        <item name="colorPrimaryDark">@color/defaultColorPrimaryDark</item>
        <item name="colorAccent">@color/defaultColorAccent</item>

        <item name="calculatorButtonColor">@color/defaultCalculatorButtonColor</item>
        <item name="calculatorButtonDeleteAllColor">@color/defaultCalculatorButtonDeleteAllColor</item>
        <item name="calculatorButtonEqualsColor">@color/defaultCalculatorButtonEqualsColor</item>
        <item name="calculatorButtonSwitchPageColor">@color/defaultCalculatorButtonSwitchPageColor</item>
        <item name="calculatorDisplayTextColor">@color/defaultCalculatorDisplayTextColor</item>

        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>

    </style>

    <style name="AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/defaultColorPrimary</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>

        <item name="calculatorButtonColor">@color/darkCalculatorButtonColor</item>
        <item name="calculatorButtonDeleteAllColor">@color/darkCalculatorButtonDeleteAllColor</item>
        <item name="calculatorButtonEqualsColor">@color/darkCalculatorButtonEqualsColor</item>
        <item name="calculatorButtonSwitchPageColor">@color/darkCalculatorButtonSwitchPageColor</item>
        <item name="calculatorDisplayTextColor">@color/darkCalculatorDisplayTextColor</item>

        <item name="toolbarStyle">@style/AppTheme.Toolbar.Dark</item>

    </style>

    <style name="AppTheme.Toolbar.Dark" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/darkColorPrimary</item>
    </style>

    <style name="AppTheme.Toolbar.Dark.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
    </style>


</resources>
